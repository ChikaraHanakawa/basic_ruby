class Greet
    attr_accessor :prefix
    def initialize(prefix)
        @prefix = prefix
    end
    #デフォルトはpublic
    public
    def mornig
        "#{@prefix} morning!"
    end
    #ここからはprivate
    private
    def afternoon
        "#{@prefix} afternoon."
    end
    #ここからはprotected
    protected
    def evening
        "#{@prefix} evening."
    end
end
user = Greet.new('Good')
puts user.mornig

